{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es5",
    "strict": true,
    // nestjs doesn't distribute safe definitions, and we import types for it through @shingo/affiliates-api
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2016", "dom"]
  },
  "angularCompilerOptions": {
    "preserveWhitespaces": false
  }
}
